---
import { siteConfig } from "../config";
const hasHobbies = siteConfig.hobbies && siteConfig.hobbies.length > 0;
---

{
  hasHobbies && (
    <section id="hobbies" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-3xl md:text-4xl xl:text-5xl font-bold text-gray-900">
              Hobbies
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              {siteConfig.hobbies.map((hobby) => {
                return (
                  <div class="group relative">
                    <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-6 hover:shadow-md transition-shadow duration-300">
                      <div class="flex items-start space-x-4">
                        <div 
                          class="flex-shrink-0 w-12 h-12 flex items-center justify-center rounded-lg"
                          style={`background-color: ${siteConfig.accentColor}15`}
                        >
                          <span class="text-2xl">{hobby.icon}</span>
                        </div>
                        <div class="flex-grow">
                          <h3 class="text-lg font-semibold text-gray-900 mb-2">
                            {hobby.name}
                          </h3>
                          <p class="text-sm text-gray-600 leading-relaxed">
                            {hobby.description}
                          </p>
                        </div>
                      </div>
                    </div>
                  </div>
                );
              })}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
