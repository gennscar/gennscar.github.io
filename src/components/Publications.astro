---
import { siteConfig } from "../config";
const hasPublications = siteConfig.publications && siteConfig.publications.length > 0;
---

{
  hasPublications && (
    <section id="publications" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-3xl md:text-4xl xl:text-5xl font-bold text-gray-900">
              Publications
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="space-y-8">
              {siteConfig.publications.map((publication, index) => {
                return (
                  <div class="group relative">
                    <div
                      class={`block relative p-4 sm:p-6 md:p-8 bg-gray-50 rounded-xl sm:rounded-2xl border border-gray-200 transition-all duration-300`}
                    >
                      <div class="space-y-4">
                        <div>
                          <span
                            class="text-sm sm:text-base md:text-base lg:text-base xl:text-xl font-mono"
                            style={{ color: siteConfig.accentColor }}
                          >
                            {publication.year}
                          </span>
                          <h3 class="text-lg sm:text-xl md:text-2xl lg:text-xl xl:text-3xl font-semibold text-gray-900 mt-1">
                            {publication.title}
                          </h3>
                          <p class="text-base sm:text-base md:text-base lg:text-base xl:text-xl font-medium mt-2" style={{ color: siteConfig.accentColor }}>
                            {publication.authors}
                          </p>
                          <p class="text-sm sm:text-sm md:text-sm lg:text-sm xl:text-lg text-gray-600 mt-1">
                            {publication.venue}
                          </p>
                        </div>

                        <p class="text-sm sm:text-base md:text-base lg:text-base xl:text-xl text-gray-600 leading-relaxed">
                          {publication.description}
                        </p>

                        {(publication.github || publication.youtube || publication.pdf) && (
                          <div class="pt-3 flex items-center gap-6">
                            {publication.github && (
                              <a
                                href={publication.github}
                                target="_blank"
                                rel="noopener noreferrer"
                                aria-label="GitHub"
                                class="github-link relative text-gray-600 transition-colors duration-300 hover:text-black"
                              >
                                <svg
                                  xmlns="http://www.w3.org/2000/svg"
                                  width="32"
                                  height="32"
                                  viewBox="0 0 24 24"
                                  fill="none"
                                  stroke="currentColor"
                                  stroke-width="2.5"
                                  stroke-linecap="round"
                                  stroke-linejoin="round"
                                  class="h-8 w-8 sm:h-9 sm:w-9 md:h-9 md:w-9 lg:h-9 lg:w-9 xl:h-11 xl:w-11"
                                >
                                  <path stroke="none" d="M0 0h24v24H0z" fill="none"
                                  ></path>
                                  <path
                                    d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"
                                  ></path>
                                </svg>
                                <span class="github-tooltip absolute -top-8 left-1/2 transform -translate-x-1/2 bg-gray-800 text-white text-xs px-2 py-1 rounded opacity-0 transition-opacity duration-300 whitespace-nowrap">
                                  Link to code
                                </span>
                              </a>
                            )}
                            {publication.youtube && (
                              <a
                                href={publication.youtube}
                                target="_blank"
                                rel="noopener noreferrer"
                                aria-label="YouTube"
                                class="youtube-link relative text-gray-600 transition-colors duration-300 hover:text-red-600"
                              >
                                <svg
                                  xmlns="http://www.w3.org/2000/svg"
                                  width="32"
                                  height="32"
                                  viewBox="0 0 24 24"
                                  fill="none"
                                  stroke="currentColor"
                                  stroke-width="2.5"
                                  stroke-linecap="round"
                                  stroke-linejoin="round"
                                  class="h-8 w-8 sm:h-9 sm:w-9 md:h-9 md:w-9 lg:h-9 lg:w-9 xl:h-11 xl:w-11"
                                >
                                  <path stroke="none" d="M0 0h24v24H0z" fill="none"
                                  ></path>
                                  <path d="M2 8a4 4 0 0 1 4 -4h12a4 4 0 0 1 4 4v8a4 4 0 0 1 -4 4h-12a4 4 0 0 1 -4 -4v-8z"
                                  ></path>
                                  <path d="M10 9l5 3l-5 3z"
                                  ></path>
                                </svg>
                                <span class="youtube-tooltip absolute -top-8 left-1/2 transform -translate-x-1/2 bg-gray-800 text-white text-xs px-2 py-1 rounded opacity-0 transition-opacity duration-300 whitespace-nowrap">
                                  Watch Video
                                </span>
                              </a>
                            )}
                            {publication.pdf && (
                              <a
                                href={publication.pdf}
                                target="_blank"
                                rel="noopener noreferrer"
                                aria-label="Paper"
                                class="paper-link relative text-gray-600 transition-colors duration-300 hover:text-blue-600"
                              >
                                <svg
                                  xmlns="http://www.w3.org/2000/svg"
                                  width="32"
                                  height="32"
                                  viewBox="0 0 24 24"
                                  fill="none"
                                  stroke="currentColor"
                                  stroke-width="2.5"
                                  stroke-linecap="round"
                                  stroke-linejoin="round"
                                  class="h-8 w-8 sm:h-9 sm:w-9 md:h-9 md:w-9 lg:h-9 lg:w-9 xl:h-11 xl:w-11"
                                >
                                  <path stroke="none" d="M0 0h24v24H0z" fill="none"
                                  ></path>
                                  <path d="M14 3v4a1 1 0 0 0 1 1h4"
                                  ></path>
                                  <path d="M17 21h-10a2 2 0 0 1 -2 -2v-14a2 2 0 0 1 2 -2h7l5 5v11a2 2 0 0 1 -2 2z"
                                  ></path>
                                  <path d="M9 9l1 0"
                                  ></path>
                                  <path d="M9 13l6 0"
                                  ></path>
                                  <path d="M9 17l6 0"
                                  ></path>
                                </svg>
                                <span class="paper-tooltip absolute -top-8 left-1/2 transform -translate-x-1/2 bg-gray-800 text-white text-xs px-2 py-1 rounded opacity-0 transition-opacity duration-300 whitespace-nowrap">
                                  Read Paper
                                </span>
                              </a>
                            )}
                          </div>
                        )}
                      </div>
                    </div>
                  </div>
                );
              })}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}

<style>
  .github-link:hover .github-tooltip {
    opacity: 1;
  }
  
  .youtube-link:hover .youtube-tooltip {
    opacity: 1;
  }
  
  .paper-link:hover .paper-tooltip {
    opacity: 1;
  }
</style>
